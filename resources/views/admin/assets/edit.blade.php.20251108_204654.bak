    <script>
        function addAssignmentRow() {
            const wrap = document.getElementById('pm-assignments');
            const idx = wrap.querySelectorAll('select[name^="pm_templates["]').length;
            const div = document.createElement('div');
            div.className = 'flex flex-col md:flex-row md:items-center gap-2 border rounded p-2';
            div.innerHTML = `
                <select name="pm_templates[${idx}][template_id]" class="rounded border-gray-300 flex-1">
                    <option value="">None (Use standard log form)</option>
                    @foreach ($templates as $t)
                        <option value="{{ $t->id }}">{{ $t->name }}</option>
                    @endforeach
                </select>
                <input type="text" name="pm_templates[${idx}][component_name]" placeholder="Component name" class="rounded border-gray-300 flex-1">
                <button type="button" class="px-3 py-1 rounded bg-red-500 text-white" onclick="removeAssignmentRow(this)">Remove</button>
            `;
            wrap.appendChild(div);
        }
        function removeAssignmentRow(btn) {
            const div = btn.closest('div');
            if (div) div.remove();
        }
    </script>
