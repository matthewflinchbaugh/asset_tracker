<script>
function addAssignmentRow(event) {
    var container = document.getElementById('assignment-container');
    if (!container) return;
    var rows = container.getElementsByClassName('assignment-row');
    var newIndex = rows.length;
    if (rows.length === 0) return;
    var clone = rows[0].cloneNode(true);

    // Update names for select and input
    var sel = clone.querySelector('select');
    if (sel) {
        sel.name = 'checklist_assignments[' + newIndex + '][template_id]';
        sel.value = '';
    }
    var inp = clone.querySelector('input[type="text"]');
    if (inp) {
        inp.name = 'checklist_assignments[' + newIndex + '][component_name]';
        inp.value = '';
    }
    container.appendChild(clone);
}

function removeAssignmentRow(event) {
    var btn = event.target;
    var row = btn.closest('.assignment-row');
    if (!row) return;
    var container = document.getElementById('assignment-container');
    if (!container) return;
    var rows = container.getElementsByClassName('assignment-row');
    if (rows.length > 1) {
        container.removeChild(row);
    } else {
        // If only one row left, clear its values instead of removing
        var sel = row.querySelector('select');
        if (sel) sel.value = '';
        var inp = row.querySelector('input[type="text"]');
        if (inp) inp.value = '';
    }
}
</script>
